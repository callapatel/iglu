
<div class= 'container formnavsearch'>
  <!-- When submit the form, the view rendered will be the index view of our articles resource -->
  <%= form_tag("/search", :method => "post", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
    <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
    of using a Rails form helper -->
    <button class="btn btn-primary" type="submit"><i class="icon-search"></i></button>
  </div>
  <% end %>
</div>
