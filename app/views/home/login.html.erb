<div class="container">
  <!-- <ul class="rig columns-3"> -->

  <% @photos.in_groups_of(3).each do |r|%>
  <div class="row">
    <% r.each do |n| %>
    <div class= 'col-xs-12 col-md-4'>
      <div class='class' data-id=<%= n.id %>>
        <%= image_tag("#{n.url}")%></br>
        <%= n.ig_user %></br>
        <%= n.caption %></br>
        <%= n.loc_name %></br>
        <%= n.lat %></br>
        <%= n.long %></br>
        <div class='actions'>
          <%= button_to "Pin It", "/pinned/new", class: 'choose btn btn-default show-modal open-modal' %>

          <% @pid = n.id %>
          <%= hidden_field_tag "[pid]", n.id, class: "info" %>


        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>



  <%= will_paginate @photos%>
</div>
