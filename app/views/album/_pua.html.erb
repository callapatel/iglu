<div class ='container'>
  <div class= 'row'>
    <div class= 'col-xs-12 col-md-12 col-lg-12'>
<div class='modal-header'>
  <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>x</button>
  <div class='modal-title'><h2><b><center>+Album</center></b></h2></div>
</div>

<div class='modal-body'>
  <form action='/pinned/new' method='POST' role='form'>
    <div class = 'form-group'>

      <label for='albumOption'>Select an Exsisting Album</label>
      <select name="album_id">
        <center>
          <option></option>
          <% @gr = Album.where(uid: current_user.id) %>
          <% @gr.all.each do |user| %>
            <% @their_album = user.a_name %>
            <% @their_a_id = user.id %>

            <option value= "<%= user.a_name %>">
              <%= user.a_name %>
            </option>
          <% end %>

        </center>
      </select> <br/><br/>

        <input name="photo[id]" type="hidden" value=<%= locals[:photo_id] %> id ="inventory-item-id" />

        <label for='albumOption'>+New Album</label>
        <input type='text' name='album[name]' class='form-control' placeholder="Like 'places to go' or 'recipies to make'" id='albumNewName'/>
      </div>


      <div class='modal-footer'>
        <input type='submit' value='+Album' class='btn btn-primary'/>
      </div>
    </form>
  </div>
</div> 
</div>
</div>
