
<div class='modal-header'>
  <button type='button' class='close' data-dismiss='modal' aria-hidden='true'>x</button>
  <div class='modal-title'><h2><b><center>Tack It!</center></b></h2></div>
</div>

<div class='modal-body'>
  <form action='/pinned/new' method='POST' role='form'>
    <div class = 'form-group'>

      <label for='albumOption'>Add to a board</label>
      <select name="album_id">
        <center>
          <% @gr = Album.where(uid: current_user.id) %>
          <% @gr.each do |user| %>
          <% @their_album = user.a_name %>
          <% @their_a_id = user.id %>
            <option value "whatt"><%= @their_album %></option>
          <% end %>

          </center>
        </select> <br/><br/>

        <input name="photo[id]" type="hidden" value=<%= locals[:photo_id] %> id ="inventory-item-id" />

        <label for='albumOption'>Create a new board</label>
        <h3> Name </h3>
        <input type='text' name='album[name]' class='form-control' placeholder="Like 'places to go' or 'recipies to make'" id='albumNewName'/>
      </div>


      <div class='modal-footer'>
        <input type='submit' value='Tack it!' class='btn btn-primary'/>
      </div>
    </form>
  </div>
