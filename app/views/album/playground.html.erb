<div class='row'>
  <% Album.where(uid: current_user.id).each do |n| %>
  <div class= 'col-xs-12 col-md-4 col-lg-4'>
    <% @albumnames = n.a_name %>
    <% if AlbumPhoto.find_by(uid: current_user.id)  %>

    <% else %>
      <% if yaya = AlbumPhoto.find_by(uid: current_user.id, album_id: @albumnames).photo_id%>
      <% puts " " %>
      <% else %>
      <% @y = Photo.find( yaya).url %>
      <div class = 'polaroid'>
        <%= image_tag(@y)%>
        <%= link_to @albumnames , show_path(feed_id: @albumnames)%>
        <%= button_to 'delete', delete_path(feed_id: @albumnames)%>
        <% end %>
    <% end %>
    </div>
  </br>
</div>
<% end %>
